<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Images</title>

    <!-- Add Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background: url('  https://res.cloudinary.com/dphaltxki/image/upload/v1708228553/qhkcp08qnqglmohzaz6o.jpg') center/cover no-repeat fixed;

        }

        .card {
            border: 1px solid #ccc;
            box-shadow: 10px 8px 6px rgba(12, 12, 12, 0.1);
            /* margin: 10px auto; */
            border-radius: 20px;
        }

        #searchall {
            padding-bottom: 20px;
        }
    </style>
</head>

<body class="container">



    <form id="searchForm" action="/get_image" method="post" class="mt-3">
        <div class="form-group">
            <label for="searchInput">Search by Name:</label>
            <input type="text" class="form-control" id="searchInput" name="search" placeholder="Enter name...">
        </div>
        <button type="submit" class="btn btn-primary">Search</button>

    </form>

    <div class="mt-3" id="searchall">
        <a href="/getAllImages"><button class="btn btn-primary">All Images</button></a>
        <a href="/"><button class="btn btn-primary">Home</button></a>
        <a href="/alreadyLogin"><button class="btn btn-primary">Dashboard</button></a>
    </div>


    <% if (images.length> 0) { %>
        <div class="row">
            <% images.forEach(image=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <% if (image.imageUrl.toLowerCase().endsWith('.pdf')) { %>
                            <div class="card-body">
                                <p class="card-text">
                                    <a href="<%= image.imageUrl %>" target="_blank">
                                        <%= image.unqname %>
                                    </a>
                                </p>
                            </div>
                            <% } else { %>
                                <img class="card-img-top" src="<%= image.imageUrl %>" alt="<%= image.name %>">
                                <div class="card-body">
                                    <p class="card-text">
                                        <%= image.unqname %>
                                    </p>
                                </div>
                                <% } %>
                    </div>
                </div>
                <% }); %>
        </div>
        <% } else { %>
            <p>No images to display.</p>
            <% } %>



