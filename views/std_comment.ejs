<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display Comments</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background: url('https://res.cloudinary.com/dphaltxki/image/upload/v1708187703/civwoz3mnrasdpchxxul.jpg') center/cover no-repeat fixed;
        }

        .notice-board {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            padding: 20px;
            margin-top: 20px;
        }

        .notice-board :hover {
            background-color: #ccd6e1;
        }

        .comment-item {
            list-style-type: none;
            padding: 10px;
            margin-bottom: 10px;
            background-color: #d9eaf6;
            border: 1px solid #c8d0d8;
            border-radius: 0.25rem;
        }

        .comment-item {
            max-height: 400px;
            /* Set a maximum height for the comment-item */
            overflow-y: auto;
            /* Enable vertical scrolling when content exceeds the maximum height */
        }

        .comment-item p {
            margin: 0;
            word-wrap: break-word;
            /* Allow long words to be broken and wrap onto the next line */
        }

        .btn {
            margin: 10px;

        }
    </style>
</head>

<body>
    <!-- <a href="/alreadyLogin"><button class="btn btn-primary">Dashboard</button></a> -->
    <a href="/"><button class="btn btn-primary">Home</button></a>
    <div class="container">

        <div class="row">

            <div class="col-md-8 mx-auto">
                <div class="notice-board">
                    <h2 class="text-center mb-4">Notice Board</h2>
                    <% data.forEach(comment=> { %>
                        <div class="comment-item">
                            <p><strong>Notice:</strong>
                                <%= comment.comment %>
                            </p>
                        </div>
                        <% }); %>
                </div>
            </div>
        </div>
    </div>

</body>

</html>